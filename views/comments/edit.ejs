<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit Comment</h1>

		<div style="width: 30%; margin: 35px auto;">
			<!-- Create form to add festival -->
			<form action="/festivals/<%= festival_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<!-- Link to festivals page -->
			<a href="/festivals">Go Back To Festivals Page</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>