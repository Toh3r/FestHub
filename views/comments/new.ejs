<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add A New Comment to <%= festival.name  %></h1>

		<div style="width: 30%; margin: 35px auto;">
			<!-- Create form to add festival -->
			<form action="/festivals/<%= festival._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="Comment">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<!-- Link to festivals page -->
			<a href="/festivals">Go Back To Festivals Page</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>